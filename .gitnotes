# Switch to the stage branch
git checkout stage

# Check the status and stage changes
git status
git add .

# Commit the changes
git commit -m "Describe the changes you made"

# Push the changes to the remote stage branch
git push origin stage

# Switch to the main branch
git checkout main

# Pull the latest changes from the remote main branch
git pull origin main

# Merge the stage branch into main
git merge stage

# Push the updated main branch to the remote
git push origin main

# Optional: Delete the local stage branch
git branch -d stage

# Optional: Delete the remote stage branch
git push origin --delete stage
